# ==================================
# CA Marketplace - Staging Environment Configuration
# ==================================
# This file serves as a template for staging environment variables
# Configure these in GitHub Secrets or your deployment platform
# NEVER commit actual staging credentials to version control

# ==================================
# Environment
# ==================================
NODE_ENV=staging
PORT=5000

# ==================================
# Database Configuration
# ==================================
# Use managed database service (RDS, Cloud SQL, etc.)
DATABASE_URL="postgresql://username:password@staging-db.example.com:5432/ca_marketplace_staging"

# Database Pool Settings
DATABASE_POOL_MIN=5
DATABASE_POOL_MAX=20
DATABASE_CONNECTION_TIMEOUT=20000

# ==================================
# Redis Configuration
# ==================================
# Use managed Redis service (ElastiCache, Redis Cloud, etc.)
REDIS_HOST=staging-redis.example.com
REDIS_PORT=6379
REDIS_PASSWORD=staging_redis_password_here
REDIS_DB=0
REDIS_URL="redis://:staging_redis_password_here@staging-redis.example.com:6379/0"

# Redis Session Configuration
SESSION_SECRET=staging-session-secret-minimum-32-characters-random
SESSION_TTL=86400

# ==================================
# JWT Configuration
# ==================================
# Generate strong random secrets (use: openssl rand -base64 32)
JWT_SECRET=staging-jwt-secret-minimum-32-characters-strong-random
JWT_REFRESH_SECRET=staging-jwt-refresh-secret-minimum-32-characters-strong-random
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ==================================
# CORS Configuration
# ==================================
CORS_ORIGIN=https://staging.camarketplace.com
CORS_CREDENTIALS=true

# ==================================
# Payment Gateway (Razorpay)
# ==================================
# Use test mode for staging
RAZORPAY_KEY_ID=rzp_test_staging_key_id
RAZORPAY_KEY_SECRET=staging_razorpay_secret_key
RAZORPAY_WEBHOOK_SECRET=staging_webhook_secret

# Platform Fee Configuration (in percentage)
PLATFORM_FEE_PERCENTAGE=10

# ==================================
# Email/SMTP Configuration
# ==================================
# Use transactional email service (SendGrid, AWS SES, etc.)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=apikey
SMTP_PASSWORD=staging_sendgrid_api_key
SMTP_FROM_EMAIL=noreply@staging.camarketplace.com
SMTP_FROM_NAME=CA Marketplace Staging

# ==================================
# AWS / S3 Configuration
# ==================================
AWS_ACCESS_KEY_ID=staging_aws_access_key
AWS_SECRET_ACCESS_KEY=staging_aws_secret_key
AWS_REGION=ap-south-1
AWS_S3_BUCKET=ca-marketplace-staging
AWS_S3_ENDPOINT=  # Leave empty for AWS S3

# Backup S3 Configuration
BACKUP_BUCKET=ca-marketplace-staging-backups

# ==================================
# File Upload Configuration
# ==================================
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,jpg,jpeg,png

# ==================================
# Monitoring & Logging
# ==================================
# Use Sentry for error tracking
SENTRY_DSN=https://staging_key@o123456.ingest.sentry.io/123456
SENTRY_ENVIRONMENT=staging
SENTRY_TRACES_SAMPLE_RATE=0.5
LOG_LEVEL=info

# ==================================
# Rate Limiting
# ==================================
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# ==================================
# Feature Flags
# ==================================
# Test new features in staging before production
FEATURE_PAYMENTS_ENABLED=true
FEATURE_EMAIL_NOTIFICATIONS=true
FEATURE_SMS_NOTIFICATIONS=false
FEATURE_REVIEW_SYSTEM=true
FEATURE_CHAT_SYSTEM=true

# ==================================
# Security
# ==================================
BCRYPT_ROUNDS=10
PASSWORD_MIN_LENGTH=8
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900000  # 15 minutes

# ==================================
# API Configuration
# ==================================
API_VERSION=v1
API_BASE_PATH=/api
API_RATE_LIMIT=100

# ==================================
# Frontend URLs
# ==================================
FRONTEND_URL=https://staging.camarketplace.com
BACKEND_URL=https://api-staging.camarketplace.com

# ==================================
# SSL/TLS Configuration
# ==================================
SSL_ENABLED=true
FORCE_HTTPS=true

# ==================================
# Session Configuration
# ==================================
SESSION_DOMAIN=.camarketplace.com
SESSION_SECURE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

# ==================================
# Deployment Configuration
# ==================================
DEPLOYMENT_ENVIRONMENT=staging
HEALTH_CHECK_PATH=/monitoring/health
METRICS_ENABLED=true

# ==================================
# Database Backup Configuration
# ==================================
BACKUP_RETENTION_DAYS=30
AUTO_BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM

# ==================================
# Cache Configuration
# ==================================
CACHE_TTL_DEFAULT=3600  # 1 hour
CACHE_TTL_SHORT=300     # 5 minutes
CACHE_TTL_LONG=86400    # 24 hours

# ==================================
# External Services
# ==================================
# ICAI API for CA verification
ICAI_API_URL=https://api.icai.org
ICAI_API_KEY=staging_icai_api_key

# GST API for business verification
GST_API_URL=https://api.gst.gov.in
GST_API_KEY=staging_gst_api_key

# ==================================
# Prisma Configuration
# ==================================
PRISMA_LOG_LEVEL=info
PRISMA_QUERY_LOG=false

# ==================================
# Development/Debugging (Staging Only)
# ==================================
SHOW_STACK_TRACES=true
ENABLE_PLAYGROUND=false
ENABLE_INTROSPECTION=false
